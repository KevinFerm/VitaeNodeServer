extends layout

block content
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        h2 Add User
        #addUser
            fieldset
                input#inputname(type='text', placeholder='name')
                input#inpuip(type='text', placeholder='ip')
                br
                input#inputrole(type='text', placeholder='role')
                input#inputteam_id(type='number', placeholder='team_id')
                br
                input#inputlast_updated(type='text', placeholder='last_updated')
                input#inputping(type='number', placeholder='ping')
                br
                button#btnAddUser Add User
